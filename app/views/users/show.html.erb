<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user) %>
  <% if current_user == @user %>
    <p class="buffer-top">
      <%= link_to "Редактировать профиль", edit_user_path(@user),
                class: 'btn btn-dark' %>
    </p>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t('user.set') %></h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= t('user.no_events_set') %></p>
      <% end %>
    </div>
  </div>
</div>
