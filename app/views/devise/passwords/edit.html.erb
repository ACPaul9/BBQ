<div class="container h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-lg-12 col-xl-11">
      <div class="card text-black" style="border-radius: 45px;">
        <div class="card-body p-md-5">
          <div class="row justify-content-center">
            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
              <h2><%= t('.change_your_password') %></h2>

              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= f.hidden_field :reset_password_token %>

                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mt-2">
                    <i class="bi bi-safe"></i>
                    <%= f.label :password, t('.new_password') %><br />
                    <% if @minimum_password_length %>
                      <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
                    <% end %>
                    <%= f.password_field :password, autofocus: true, class: "form-control" %>
                  </div>
                </div>

                <div class="d-flex flex-row align-items-center">
                  <div class="form-outline flex-fill">
                    <i class="bi bi-safe"></i>
                    <%= f.label :password_confirmation, t('.confirm_new_password') %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                  </div>
                </div>

                <div class="actions mt-4">
                  <%= f.submit t('.change_my_password'), class: 'btn btn-outline-primary'%>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
