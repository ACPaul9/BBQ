<%= form_with model: @event, data: { turbo: false } do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="d-flex flex-row align-items-center mb-4">
    <div class="form-outline flex-fill mb-0">
      <i class="bi bi-sticky"></i>
      <%= f.label :title, class: 'form-label' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="d-flex flex-row align-items-center mb-4">
    <div class="form-outline flex-fill mb-0">
      <i class="bi bi-map-fill"></i>
      <%= f.label :address, class: 'form-label' %>
      <%= f.text_field :address, class: 'form-control' %>
    </div>
  </div>

  <div class="d-flex flex-row align-items-center mb-4">
    <div class="form-outline flex-fill mb-0">
      <i class="bi bi-calendar-week"></i>
      <%= f.label :datetime, class: 'form-label' %>
      <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
    </div>
  </div>

  <div class="d-flex flex-row align-items-center mb-4">
    <div class="form-outline flex-fill mb-0">
      <i class="bi bi-chat-square-text-fill"></i>
      <%= f.label :description, class: 'form-label' %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="d-flex flex-row align-items-center mb-4">
    <div class="form-outline flex-fill mb-0">
      <i class="bi bi-chat-square-text-fill"></i>
      <%= f.label :pincode %>
      <%= f.text_field :pincode, class: 'form-control' %>
    </div>
  </div>

  <div class="actions my-4">
    <%= f.submit t('app.save'), class: 'btn btn-outline-primary', data: { turbo: false } %>
    или <%= link_to t('app.back'), :back, class: 'btn btn-outline-primary ms-1', data: { turbo: false }%>
  </div>
<% end %>